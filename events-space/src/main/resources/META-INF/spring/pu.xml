

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
      xmlns:os-core="http://www.openspaces.org/schema/core" xmlns:os-events="http://www.openspaces.org/schema/events"
      xmlns:os-remoting="http://www.openspaces.org/schema/remoting"
      xmlns:os-sla="http://www.openspaces.org/schema/sla"
      xsi:schemaLocation="
   http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
   http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
   http://www.openspaces.org/schema/core http://www.openspaces.org/schema/10.1/core/openspaces-core.xsd">
 
      <!-- Scan the packages for annotations / -->
      <context:component-scan base-package="com.magic.*" />
 
      <!-- Enables to configure Spring beans through annotations -->
      <context:annotation-config />
 
      <!-- A bean representing a space (an IJSpace implementation) -->
      <os-core:distributed-tx-manager id="transactionManager"/>
 
<!--        <os-core:space id="mySpace" url="jini://*/*/MySpace1?locators=127.0.0.1" />
      <os-core:giga-space id="gigaMySpace" space="mySpace" tx-manager="transactionManager"/> -->
 

      <os-core:embedded-space id="insightedgespace" name="insightedge-space" /> 
    

      <!--
          A wrapper bean to the space to provide OpenSpaces simplified space API (built on top of IJSpace/JavaSpace).
      -->
      <os-core:giga-space id="gigaSpaceProxy" space="insightedgespace" tx-manager="transactionManager"/>
</beans>
 